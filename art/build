#!/usr/bin/env bash
# Depends-on: icoutils inkscape

for icon in ic_launcher ic_ekylibre
do

    for size in 36 48 72 96 144 192
    do
		    #  --export-background=FFFFFF
        inkscape -z --export-png=$icon-${size}px.png --export-width=${size} --export-height=${size} $icon.svg
    done
    
    # pngcrush $icon-48px.png  ../res/drawable/$icon.png
    
    pngcrush $icon-36px.png  ../res/drawable-ldpi/$icon.png
    pngcrush $icon-48px.png  ../res/drawable-mdpi/$icon.png
    pngcrush $icon-72px.png  ../res/drawable-hdpi/$icon.png
    pngcrush $icon-96px.png  ../res/drawable-xhdpi/$icon.png
    pngcrush $icon-144px.png ../res/drawable-xxhdpi/$icon.png
    pngcrush $icon-192px.png ../res/drawable-xxxhdpi/$icon.png
    
    # Removes useless files
    rm -f $icon-*px.png

done
